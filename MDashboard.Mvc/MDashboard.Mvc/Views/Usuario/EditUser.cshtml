@model MDashboard.Models.Usuario

@{
    ViewData["Title"] = "Editar Usuario";
}

<h1>Editar Usuario</h1>

<form asp-action="EditUser" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Nombre" class="control-label">Nombre</label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email" class="control-label">Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PasswordHash" class="control-label">Contraseña</label>
        <input asp-for="PasswordHash" type="password" class="form-control" />
        <span asp-validation-for="PasswordHash" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Rol" class="control-label">Rol</label>
        <select asp-for="Rol" class="form-control" asp-items="@(new SelectList(new[] { "Admin", "User" }))">
            <option value="">Seleccione un Rol</option>
        </select>
        <span asp-validation-for="Rol" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FechaRegistro" class="control-label">Fecha de Registro</label>
        <input asp-for="FechaRegistro" type="date" class="form-control" disabled />
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="UserList" class="btn btn-secondary">Cancelar</a>
</form>
