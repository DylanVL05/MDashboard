@model MDashboard.Models.Usuario

@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow-dark-lg border-0">
                <div class="card-header bg-dark-2 border-bottom border-dark">
                    <h2 class="h4 mb-0 text-light">@ViewData["Title"]</h2>
                </div>

                <div class="card-body bg-dark-1 p-4">
                    <form asp-action="EditUser" method="post">
                        @Html.AntiForgeryToken()

                        <input type="hidden" asp-for="Id" />

                        <div class="form-group-dark mb-4">
                            <label asp-for="Nombre" class="form-label text-light-1">Nombre</label>
                            <input asp-for="Nombre" class="form-control bg-dark-2 border-dark text-light" />
                            <span asp-validation-for="Nombre" class="text-warning small"></span>
                        </div>

                        <div class="form-group-dark mb-4">
                            <label asp-for="Email" class="form-label text-light-1">Email</label>
                            <input asp-for="Email" class="form-control bg-dark-2 border-dark text-light" />
                            <span asp-validation-for="Email" class="text-warning small"></span>
                        </div>

                        <div class="form-group-dark mb-4">
                            <label asp-for="PasswordHash" class="form-label text-light-1">Contraseña</label>
                            <input asp-for="PasswordHash" type="password" class="form-control bg-dark-2 border-dark text-light" />
                            <span asp-validation-for="PasswordHash" class="text-warning small"></span>
                        </div>

                        <div class="form-group-dark mb-4">
                            <label asp-for="Rol" class="form-label text-light-1">Rol</label>
                            <select asp-for="Rol" class="form-select bg-dark-2 border-dark text-light"
                                    asp-items="@(new SelectList(new[] { "Admin", "User" }))">
                                <option value="" class="bg-dark-2">Seleccione un Rol</option>
                            </select>
                            <span asp-validation-for="Rol" class="text-warning small"></span>
                        </div>

                        <div class="form-group-dark mb-4">
                            <label asp-for="FechaRegistro" class="form-label text-light-1">Fecha de Registro</label>
                            <input asp-for="FechaRegistro" type="date"
                                   class="form-control bg-dark-2 border-dark text-light" disabled />
                        </div>

                        <div class="form-group mt-5 pt-3 border-top border-dark">
                            <button type="submit" class="btn btn-primary-gradient px-5 py-2">
                                <i class="fas fa-save me-2"></i>Guardar Cambios
                            </button>
                            <a asp-action="UserList" class="btn btn-outline-light px-5 py-2 ms-3">
                                <i class="fas fa-arrow-left me-2"></i>Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    :root {
        --dark-1: #1a1a1a;
        --dark-2: #2d2d2d;
        --dark-3: #404040;
        --light-1: #f8f9fa;
        --light-2: #e9ecef;
        --accent: #00b4d8;
    }

    .bg-dark-1 {
        background-color: var(--dark-1);
    }

    .bg-dark-2 {
        background-color: var(--dark-2);
    }

    .border-dark {
        border-color: var(--dark-3) !important;
    }

    .text-light-1 {
        color: var(--light-1);
    }

    .text-light-2 {
        color: var(--light-2);
    }

    .form-control, .form-select {
        border-radius: 8px;
        transition: all 0.3s ease;
        background-color: var(--dark-2) !important; /* Fijo el fondo oscuro */
    }

        .form-control:focus, .form-select:focus {
            border-color: var(--accent);
            box-shadow: 0 0 0 3px rgba(0, 180, 216, 0.25);
            background-color: var(--dark-2) !important; /* Mantiene fondo oscuro al enfocar */
            outline: none; /* Elimina el contorno predeterminado */
        }


    .btn-primary-gradient {
        background: linear-gradient(135deg, var(--accent), #0096c7);
        border: none;
        color: white;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .btn-primary-gradient:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 15px rgba(0, 180, 216, 0.4);
        }

    .btn-outline-light {
        border: 2px solid var(--dark-3);
        transition: all 0.3s ease;
    }

        .btn-outline-light:hover {
            border-color: var(--accent);
            color: var(--accent);
        }

    .card {
        border-radius: 12px;
        overflow: hidden;
    }

    .shadow-dark-lg {
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    }

    input:-webkit-autofill,
    input:-webkit-autofill:hover,
    input:-webkit-autofill:focus {
        -webkit-text-fill-color: var(--light-1);
        -webkit-box-shadow: 0 0 0px 1000px var(--dark-2) inset;
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}