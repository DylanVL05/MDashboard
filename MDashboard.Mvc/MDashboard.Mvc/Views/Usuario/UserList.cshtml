@model IEnumerable<MDashboard.Models.Usuario>

@{
    ViewData["Title"] = "Lista de Usuarios";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-white mb-0">Lista de Usuarios</h2>
        <a class="btn btn-success btn-lg" href="@Url.Action("AddUser")">
            <i class="fas fa-plus-circle me-2"></i>Agregar Usuario
        </a>
    </div>

    <style>
        /* Estilos base de la tabla */
        .widget-table {
            background-color: #121212 !important;
            color: white !important;
            border-collapse: collapse;
        }
            /* Encabezado de la tabla */
            .widget-table thead th {
                background-color: #000000 !important;
                color: white !important;
                font-weight: 600;
                padding: 1rem;
                border-bottom: 2px solid #333 !important;
            }
            /* Filas: gris oscuro alternado */
            .widget-table tbody tr:nth-child(odd) {
                background-color: #1e1e1e !important;
            }

            .widget-table tbody tr:nth-child(even) {
                background-color: #252525 !important;
            }
            /* Celdas: texto, padding y bordes */
            .widget-table tbody td {
                color: white !important;
                padding: 1rem;
                border-top: 1px solid #333 !important;
                word-break: break-word;
                white-space: normal;
            }
            /* Hover en filas */
            .widget-table tbody tr:hover {
                background-color: #333 !important;
            }
        /* (Opcional) Badges de estado */
        .status-active {
            background-color: rgba(40, 167, 69, 0.2) !important;
            color: #28a745 !important;
        }

        .status-inactive {
            background-color: rgba(220, 53, 69, 0.2) !important;
            color: #dc3545 !important;
        }
        /* Contenedor para scroll horizontal */
        .table-responsive {
            border-radius: 8px;
            overflow-x: auto; /* Activa scroll horizontal si la tabla es más ancha que el contenedor */
            box-shadow: 0 0 20px rgba(0,0,0,0.5);
        }
        /* Para pantallas mayores a 768px: se aplica un min-width para forzar el scroll horizontal */
        @@media (min-width: 769px) {
            .table-responsive > table

        {
            min-width: 800px; /* Ajusta este valor según la cantidad de columnas y el espacio deseado */
        }
        /* Ajuste del botón de eliminar solo en modo tabla */
        .btn-action {
            min-width: 120px;
            white-space: nowrap;
        }

        }
        /* Modo card: para dispositivos con viewport de 768px o menos */
        @@media (max-width: 768px) {
            .widget-table thead

        {
            display: none;
        }

        .widget-table tbody tr {
            display: block;
            margin-bottom: 1rem;
            border: 1px solid #333;
            border-radius: 5px;
        }

        .widget-table tbody td {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0.75rem;
            border: none;
        }

            .widget-table tbody td::before {
                content: attr(data-label);
                font-weight: 600;
                color: #aaa !important;
                margin-right: 1rem;
            }
        /* Para mostrar siempre columnas con clases d-none en móvil */
        .d-none.d-md-table-cell,
        .d-none.d-lg-table-cell {
            display: flex !important;
        }

        }
    </style>

    <div class="table-responsive widget-table">
        <table class="table table-hover align-middle mb-0">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Rol</th>
                    <th>Fecha de Registro</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    int counter = 1;
                    foreach (var usuario in Model)
                    {
                        <tr>
                            <td data-label="#">@counter</td>
                            <td data-label="Nombre">@usuario.Nombre</td>
                            <td data-label="Email">@usuario.Email</td>
                            <td data-label="Rol">@usuario.Rol</td>
                            <td data-label="Fecha de Registro">@usuario.FechaRegistro?.ToString("dd/MM/yyyy")</td>
                            <!-- Se asigna la clase "action-cell" para controlar la alineación según el responsive -->
                            <td data-label="Acciones" class="action-cell text-center">
                                <div class="d-flex flex-wrap align-items-center gap-2">
                                    <a class="btn btn-primary" href="@Url.Action("EditUser", new { id = usuario.Id })">
                                        <i class="fas fa-edit me-1"></i>Editar
                                    </a>
                                    <form action="@Url.Action("DeleteUser", new { id = usuario.Id })" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-danger btn-action" onclick="return confirm('¿Está seguro de eliminar este usuario?')">
                                            <i class="fas fa-trash-alt me-1"></i> Eliminar
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        counter++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center">No hay usuarios disponibles.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
