@model IEnumerable<MDashboard.Models.Usuario>

@{
    ViewData["Title"] = "Lista de Usuarios";
}

<style>
    table.table-striped td,
    table.table-striped th {
        color: white;
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Lista de Usuarios</h1>
    <a class="btn btn-success" href="@Url.Action("AddUser")">Agregar Usuario</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Nombre</th>
            <th>Email</th>
            <th>Rol</th>
            <th>Fecha de Registro</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int counter = 1;
            foreach (var usuario in Model)
            {
                <tr>
                    <td colspan="">@counter</td>
                    <td>@usuario.Nombre</td>
                    <td>@usuario.Email</td>
                    <td>@usuario.Rol</td>
                    <td>@usuario.FechaRegistro?.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a class="btn btn-primary" href="@Url.Action("EditUser", new { id = usuario.Id })">Editar</a>
                        <form action="@Url.Action("DeleteUser", new { id = usuario.Id })" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('¿Está seguro de eliminar este usuario?')">Eliminar</button>
                        </form>
                    </td>
                </tr>
                counter++;
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">No hay usuarios disponibles.</td>
            </tr>
        }
    </tbody>
</table>
