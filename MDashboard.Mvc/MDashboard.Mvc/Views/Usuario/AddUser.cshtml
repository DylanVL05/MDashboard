@model MDashboard.Models.Usuario

@{
    ViewData["Title"] = "Agregar Usuario";
}

<div class="container mt-4">
    <div class="card shadow">
        <!-- Encabezado de la tarjeta -->
        <div class="card-header text-center" style="background-color: #000000; color: white;">
            <h2 class="mb-0">@ViewData["Title"]</h2>
        </div>
        <!-- Cuerpo de la tarjeta -->
        <div class="card-body" style="background-color: #121212; color: white;">
            <form asp-action="AddUser" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Campo Nombre -->
                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label">Nombre</label>
                    <input asp-for="Nombre" class="form-control"
                           style="background-color: #ffffff; color: #000000; border-color: #ffffff;" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <!-- Campo Email -->
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control"
                           style="background-color: #ffffff; color: #000000; border-color: #ffffff;" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Campo Contraseña -->
                <div class="mb-3">
                    <label asp-for="PasswordHash" class="form-label">Contraseña</label>
                    <input asp-for="PasswordHash" type="password" class="form-control"
                           style="background-color: #ffffff; color: #000000; border-color: #ffffff;" />
                    <span asp-validation-for="PasswordHash" class="text-danger"></span>
                </div>

                <!-- Campo Rol -->
                <div class="mb-3">
                    <label asp-for="Rol" class="form-label">Rol</label>
                    <select asp-for="Rol" class="form-control"
                            style="background-color: #ffffff; color: #000000; border-color: #ffffff;">
                        <option value="">Seleccione un Rol</option>
                        <option value="Admin">Admin</option>
                        <option value="User">Usuario</option>
                    </select>
                    <span asp-validation-for="Rol" class="text-danger"></span>
                </div>

                <!-- Botones de Acción -->
                <div class="d-flex justify-content-end gap-2">
                    <button type="submit" class="btn btn-success">Guardar</button>
                    <a asp-action="UserList" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
