@model IEnumerable<MDashboard.Models.Widget>

@{
    ViewData["Title"] = "Lista de Widgets";
}

<h2>Lista de Widgets Activos</h2>

<a asp-action="Create" class="btn btn-success">Agregar Widget</a>

<style>

    table.table-striped td {
        color: white;
    }
</style>


<table class="table table-striped">
    <thead>
        
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>URL API</th>
            <th>Estado</th>
            <th>Componente</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var widget in Model)

        {
            <tr>
                <td>@widget.Id</td>
                <td>@widget.Nombre</td>
                <td>@widget.Descripcion</td>
                <td>@widget.UrlApi</td>
                <td>@widget.ApiKey</td>
                <td>@(widget.Estado == true ? "Activo" : "Inactivo")</td>
                <td>@widget.Component.Id</td>
                <td>
                <form asp-action="Delete" method="post">
                    <input type="hidden" name="id" value="@widget.Id" />
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>
                </td>
            </tr>
        }

    </tbody>
</table>
