@model MDashboard.Models.Widget

@{
    ViewData["Title"] = "Crear Widget";
}

<h2>Crear Nuevo Widget</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Descripcion"></label>
        <input asp-for="Descripcion" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="UrlApi"></label>
        <input asp-for="UrlApi" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="ApiKey"></label>
        <input asp-for="ApiKey" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="ComponentId">Tipo de Componente</label>
        <select asp-for="ComponentId" class="form-control" required>
            <option value="">Seleccione un tipo de componente</option>
            @foreach (var component in ViewBag.Components as List<MDashboard.Models.Component>)
            {
                <option value="@component.Id">@component.Tipo</option>
            }
        </select>
    </div>


    <div class="form-group">
        <label asp-for="Estado"></label>
        <select asp-for="Estado" class="form-control">
            <option value="true">Activo</option>
            <option value="false">Inactivo</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
</form>
