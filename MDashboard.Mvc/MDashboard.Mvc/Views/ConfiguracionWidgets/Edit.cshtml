@model MDashboard.Models.ConfiguracionWidget

@{
    ViewData["Title"] = "Editar Configuración";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="UsuarioId" class="control-label"></label>
        <input asp-for="UsuarioId" class="form-control" />
        <span asp-validation-for="UsuarioId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="WidgetId" class="control-label"></label>
        <input asp-for="WidgetId" class="form-control" />
        <span asp-validation-for="WidgetId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Height" class="control-label"></label>
        <input asp-for="Height" class="form-control" />
        <span asp-validation-for="Height" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Width" class="control-label"></label>
        <input asp-for="Width" class="form-control" />
        <span asp-validation-for="Width" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EsFavorito" class="control-label"></label>
        <select asp-for="EsFavorito" class="form-control">
            <option value="false">No</option>
            <option value="true">Sí</option>
        </select>
        <span asp-validation-for="EsFavorito" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EsVisible" class="control-label"></label>
        <select asp-for="EsVisible" class="form-control">
            <option value="false">No</option>
            <option value="true">Sí</option>
        </select>
        <span asp-validation-for="EsVisible" class="text-danger"></span>
    </div>

    @* Campo oculto para el Id *@
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    <!-- Se incluyen los scripts de validación predeterminados -->
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
