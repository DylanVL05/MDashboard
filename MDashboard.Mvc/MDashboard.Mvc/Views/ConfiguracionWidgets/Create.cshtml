@model MDashboard.Models.ConfiguracionWidget

@{
    ViewData["Title"] = "Nueva Configuración de Widget";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="UsuarioId" class="control-label"></label>
            <input asp-for="UsuarioId" class="form-control" />
            <span asp-validation-for="UsuarioId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="WidgetId" class="control-label"></label>
            <input asp-for="WidgetId" class="form-control" />
            <span asp-validation-for="WidgetId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Width" class="control-label"></label>
            <input asp-for="Width" class="form-control" />
            <span asp-validation-for="Width" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Height" class="control-label"></label>
            <input asp-for="Height" class="form-control" />
            <span asp-validation-for="Height" class="text-danger"></span>
        </div>

        <div class="form-check">
            <input asp-for="EsFavorito" class="form-check-input" />
            <label asp-for="EsFavorito" class="form-check-label"></label>
        </div>

        <div class="form-check">
            <input asp-for="EsVisible" class="form-check-input" />
            <label asp-for="EsVisible" class="form-check-label"></label>
        </div>

        <div class="form-group mt-3">
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
